{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --workspace=apps/api --include-workspace-root",
        "buildCommand": "npm run build:core && npm run build:api"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/api/$1"
    }
  ]
}
